<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_items_product_hint_menu"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtNameLocaion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FPT Phường Mỹ Đình, Quận Nam Từ Liêm, Hà 1111111111"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtUpdateLocaion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:drawableStart="@drawable/update_25"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtDeleteLocaion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:drawableStart="@drawable/delete_25"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>